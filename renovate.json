{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Presets from https://github.com/bcgov/nr-renovate",
  "extends": [
    "github>bcgov/renovate-config"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "charts/nr-metabase/values.yaml"
      ],
      "matchPackageNames": [
        "metabase/metabase"
      ],
      "matchManagers": [
        "helm-values"
      ],
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "enabled": false
    }
  ]
}
